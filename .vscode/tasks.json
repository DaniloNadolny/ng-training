{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "_runner": "terminal",
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "Install NPM dependencies",
      "args": ["install"]
    },
    {
      "taskName": "Lint code",
      "args": ["run", "-s", "lint"]
    },
    {
      "taskName": "The Loose Equality Game",
      "args": ["run", "-s", "game"]
    }
  ]
}