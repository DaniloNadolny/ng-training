{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "runner": "terminal",
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "Build TS Code",
      "args": ["run", "build"]
    },
    {
      "taskName": "Install NPM dependencies",
      "args": ["install"],
      "isBuildCommand": true
    },
    {
      "taskName": "Lint code",
      "args": ["run", "lint"]
    },
    {
      "taskName": "The Loose Equality Game",
      "args": ["run", "game"]
    }
  ]
}